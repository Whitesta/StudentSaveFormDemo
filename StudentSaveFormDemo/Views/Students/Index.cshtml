@using StudentSaveFormDemo.Models.EntityFramework

@model List<TblStudents>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="col-lg-3">Students List</h1>
<table class="table table-bordered">
    <tr>
        <th>Id </th>
        <th>FirstName </th>
        <th>LastName </th>
        <th>Note </th>
        <th>Foto </th>
        <th>Club </th>
        <th>Gender </th>
        <th>Manage </th>
    </tr>
    <tbody>
        @foreach (var student in Model)
        {
        <tr>
            <td>@student.StudentID</td>
            <td>@student.StudentFirstName</td>
            <td>@student.StudentLastName</td>
            <td>@student.StudentNote</td>
            <td>@student.StudentFoto</td>
            <td>@student.TblClubs.ClubName</td>
            <td>@student.StudentGender</td>
            <td>
                <a href="/Students/Delete/@student.StudentID" class="btn btn-danger"> Delete</a>
                <a href="/Students/GetStudent/@student.StudentID" class="btn btn-success"> Update</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="/Students/AddStudent" class="btn btn-primary"> Add New Student</a>

